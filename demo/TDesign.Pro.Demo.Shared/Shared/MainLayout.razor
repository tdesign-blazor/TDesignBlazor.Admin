@inherits LayoutComponentBase

<BasicLayout SideMenuItemsProvider="GetSideMenuItems" TopMenuItemsProvider="GetTopMenuItems">
    <BodyContent>
        @Body
    </BodyContent>
</BasicLayout>

@code{
    Task<IEnumerable<MenuItem>> GetTopMenuItems()
    {
        var menus = new List<MenuItem>
        {
             new()
             {
                 Name="Github 源代码",
                 Link="https://github.com/tdesign-blazor/TDesignBlazor.Pro"
             },
             new()
             {
                 Name="TDesignBlazor 组件库",
                 Link="https://github.com/tdesign-blazor/TDesignBlazor"
             },
        };
        return Task.FromResult(menus.AsEnumerable());
    }

    Task<IEnumerable<MenuItem>> GetSideMenuItems()
    {
        var menus= new List<MenuItem>
        {
             new()
             { 
                 Name="开始", 
                 IsGroup=true,
                 Children=new List<MenuItem>
                 {
                     new(){ Name="快速上手", Link="/"}
                 }
             },
             new()
             { 
                 Name="组件",
                 IsGroup=true,
                 Children=new List<MenuItem>
                 {
                    new(){ Name="基础布局（BasicLayout)", Link="/components/basiclayout"},
                    new(){ Name="对话框表格(CrudDialogTable)", Link="/components/dialogtable"}
                 }
             }
        };
        return Task.FromResult(menus.AsEnumerable());
    }
}