@inherits LayoutComponentBase

<BasicLayout SideMenuItemsProvider="GetSideMenuItems">
    @Body
</BasicLayout>

@code{
    Task<IEnumerable<MenuItem>> GetSideMenuItems()
    {
        var menus= new List<MenuItem>
        {
             new()
             { 
                 Name="开始", 
                 IsGroup=true,
                 Children=new List<MenuItem>
                 {
                     new(){ Name="快速上手", Link="/"}
                 }
             },
             new()
             { 
                 Name="组件",
                 IsGroup=true,
                 Children=new List<MenuItem>
                 {
                    new(){ Name="基础布局（BasicLayout)", Link="/components/basiclayout"},
                    new(){ Name="对话框表格", Link="/components/table_dialog"}
                 }
             }
        };
        return Task.FromResult(menus.AsEnumerable());
    }
}